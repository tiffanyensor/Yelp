-- Database: Yelp

-- DROP DATABASE "Yelp";

CREATE DATABASE "Yelp"
    WITH 
    OWNER = postgres
    ENCODING = 'UTF8'
    LC_COLLATE = 'C'
    LC_CTYPE = 'C'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;
    
    
