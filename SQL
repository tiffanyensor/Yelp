CREATE TABLE Yelp_business
(
Rownumber SERIAL,
Business_id VARCHAR(100),
Business_name VARCHAR(100),
Neighbourhood VARCHAR(100),
Address VARCHAR(1000)
City VARCHAR(100),
State_province VARCHAR(3),
Postal_code VARCHAR(7),
Latitude VARCHAR(100),
Longitude VARCHAR(100),
Stars FLOAT,
Review_count INT,
Is_open BOOLEAN,
Bike_parking BOOLEAN,
Accepts_cc BOOLEAN,
Garage_parking BOOLEAN,
Street_parking BOOLEAN,
Validated_parking BOOLEAN,
Parking_lot BOOLEAN,
Valet BOOLEAN,
Good_for_kids BOOLEAN,
Has_TV BOOLEAN,
Noise_level VARCHAR(100),
Outdoor_seating BOOLEAN,
Attire VARCHAR(100),
Delivery BOOLEAN,
Good_for_groups BOOLEAN,
Price_range INT,
Reservations BOOLEAN,
Takeout BOOLEAN,
Categories VARCHAR(100),
Monday_hours VARCHAR(100),
Tuesday_hours VARCHAR(100),
Wednesday_hours VARCHAR(100),
Thursday_hours VARCHAR(100),
Friday_hours VARCHAR(100),
Saturday_hours VARCHAR(100),
Sunday_hours VARCHAR(100)
);



